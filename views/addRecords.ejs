<% include _header %>

<form action="/admin/addRecords" method="post">
    <div class="form-group">
        <input name="concordiaID" type="number" class="form-control" placeholder="concordiaID"  required>
    </div>
    <div class="form-group">
        <input name="year" type="number" class="form-control" placeholder="year" required>
    </div>
    <div class="form-group">
        <input name="semester" type="text" class="form-control" placeholder="semester" required>
    </div>
    <div class="form-group">
        <input name="courseNumber" type="text" class="form-control" placeholder="courseNumber"  required>
    </div>
    <div class="form-group">
        <input name="grade" type="text" class="form-control" placeholder="grade"  required>
    </div>

    <button type="submit" class="btn btn-success btn-block full-width m-b">Add Records</button>

</form>

<% include _footer %>