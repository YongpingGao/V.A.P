<% include _header %>

<!-- show any messages that come back with authentication -->
<% if (message.length > 0) { %>
<div class="alert alert-danger"><%= message %></div>
<% } %>


<div>
    <div>
        <h2 class="text-info login-title">V.A.P</h2>

        <h3>Versatile Agenda Platform</h3>
    </div>

    <p class="text-info login-session"></p>
    <form action="/login" method="post">
        <div class="form-group">
            <input name="concordiaID" type="number" class="form-control" placeholder="ConcordiaID"  required>
        </div>
        <div class="form-group">
            <input name="password" type="password" class="form-control" placeholder="Password" required>
        </div>
        <button type="submit" class="btn btn-success btn-block full-width m-b">Log In</button>

    </form>
</div>


<% include _footer %>
